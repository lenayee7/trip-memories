<div class="container-fluid">
  <div class="new-post-trip-div">
    <h2 class="h2-titles">New Post</h2>
    <div class="margin-bottom"><%= link_to "<< #{@trip.title}", @trip, class:"nav-back" %></div>
    <%= form_for :post, url: trip_posts_path do |f| %>
      
      <p>
        <%= f.label :image %><br>
        <%= uploadcare_uploader_field :post, :image %>
      </p>
      
      <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </p>

      <p>
        <%= f.label :content %><br>
        <%= f.text_area :content %>
      </p>
    
      <p>
        <%= f.submit %>
      </p>
    <% end %>
  </div>
</div>