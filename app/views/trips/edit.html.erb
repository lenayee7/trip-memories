<div class="container-fluid">
  <%= link_to "Back to My Trips", trips_path, class:"nav-back" %>

  <div id="new-trip-div">
    <h2>Edit Trip</h2>

    <%= form_for @trip do |f| %>
     
      <p>
        <%= f.label :title %>
        <%= f.text_field :title %>
      </p>
     
      <p>
        <%= f.label :location %>
        <%= f.text_field :location %>
      </p>

       <p>
        <%= f.label :start_date %>
        <%= f.date_field :start_date %>
      </p>

      <p>
       <%= f.label :end_date %>
       <%= f.date_field :end_date %>
      </p>

      <p>
        <%= f.label :cover_image %><br>
        <%= f.file_field :cover_image %>
      </p>
     
      <p>
        <%= f.submit %>
      </p>
     
    <% end %>
  </div>
</div>
