<h1><%= current_user.name %>'s Trips</h1>

	<p>You have <%= @trips.length %> trips!</p>

<div class="trip-index-div text-left">
	<% @trips.each do |trip| %>
   <div class="trip-div col-md-4 col-xs-6" >
    <%= image_tag trip.cover_image, class: "cover-image" %>
    <div class="black-box col-xs-12">
      <p>
      <%= link_to trip.title, trip_path(trip), class:"title-link" %><br>
    <!--   <h5><%= trip.start_date %> - <%= trip.end_date %></h5> -->
      <%= trip.location %><br>
      <%= trip.posts.length %> - posts</p>
    </div>
  
   </div>
	<% end %>
</div>